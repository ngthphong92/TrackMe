<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.TrackMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TrackMe" parent="Base.Theme.TrackMe" />

    <style name="Theme.TrackMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrackMe.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="TextAppearance.TrackMe.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
